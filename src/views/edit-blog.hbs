<!-- Form Blog -->
<div class="container mb-5" style="margin-top: 100px">
  <h2 class="text-center">Edit Post Blog</h2>

  <form action="/blog/edit/{{blog.id}}" method="post" class="w-75 mx-auto">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        value="{{blog.title}}"
      />
    </div>

    <div class="mb-3">
      <label for="content" class="form-label">Content</label>
      <textarea
        class="form-control"
        id="content"
        style="resize: none; height: 200px"
        name="content"
      >{{blog.content}}</textarea>
    </div>

    <div class="mb-3">
      <label for="uploadImage" class="form-label">Upload Image</label>
      <input type="file" class="form-control" id="uploadImage" name="image" />
    </div>

    <div class="d-flex justify-content-end mt-5">
      <button type="submit" class="btn btn-danger px-3 py-1">Post Blog</button>
    </div>
  </form>
</div>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
  crossorigin="anonymous"
></script>