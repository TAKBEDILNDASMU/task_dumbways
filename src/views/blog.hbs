<!-- Blog -->
<!-- Form -->
<div class="blog container" style="margin-top: 5rem">
  <div class="d-flex justify-content-end">
    <a class="btn btn-danger px-3 py-1" href="/blog/create">Add Blog</a>
  </div>

  <div class="blog-list" id="contents">
    <!-- dynamic content would be here -->
    {{#each blogs}}
      <div class="blog-list-item">
        <div class="blog-image">
          <img class="h-100" src="/images/blog-img.png" alt="" />
        </div>
        <div class="blog-content">
          <div class="mt-3 mt-lg-0">
            <a href="/blog/edit/{{this.id}}" class="btn btn-info text-white">Edit Post</a>
            <a href="/blog/delete/{{this.id}}" class="btn btn-danger">Delete Blog</a>
          </div>
          <h1>
            <a href="/blog/{{this.id}}" target="_blank">{{this.title}}</a>
          </h1>
          <div class="detail-blog-content">
            {{this.postedAt}}
            |
            {{this.author}}
          </div>
          <p>
            {{this.content}}
          </p>

          <div>
            {{#each this.technologies}}
              <i
                class="fa-brands fa-{{this.technology}} fs-3 me-2"
                style="color: {{this.color}};"
              ></i>
            {{/each}}
          </div>
          <div style="float: right; margin: 10px">
            <p style="font-size: 15px; color: grey">1 minutes ago</p>
          </div>
        </div>
      </div>
    {{/each}}

  </div>

</div>